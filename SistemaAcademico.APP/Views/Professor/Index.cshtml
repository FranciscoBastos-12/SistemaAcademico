@model IEnumerable<SistemaAcademico.APP.Entities.Professor>
@{
    ViewData["Title"] = "Index";
}

<div class="row" style="background-color: #fdf1e5">
    <div class="col-lg-6  mt-3">
        <ul class="nav justify-content-center">
            <li class="nav-item mx-2 blackboard">
                <a asp-area="" asp-controller="Professor" asp-action="NovoProfessor" class="nav-link text-white-50 font-weight-bold">MATRICULAR</a>
            </li>
            <li class="nav-item mx-2 blackboard">
                <a asp-area="" asp-controller="Professor" asp-action="AtualizarProfessor" class="nav-link text-white-50 font-weight-bold">ATUALIZAR</a>
            </li>
            <li class="nav-item mx-2 blackboard">
                <a asp-area="" asp-controller="Professor" asp-action="RemoverProfessor" class="nav-link text-white-50 font-weight-bold">REMOVER</a>
            </li>
        </ul>
        <img src="~/assets/teacher.jpg" class="img-fluid" alt="teacher" />
    </div>
    <div class="col-lg-6  mt-3">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Insira o nome do professores que quer buscar" aria-label="Professor desejado" aria-describedby="btnBuscarProfessor">
            <div class="input-group-append">
                <button class="btn btn-success" type="button" id="btnBuscarProfessor">Buscar</button>
            </div>
        </div>
        <span class="pl-md-2 font-italic">Para mostrar a lista completa deixe o campo em vazio e clique em buscar</span>
        @await Html.PartialAsync("_ListaDeProfessores.cshtml", Model)
    </div>
</div>

<link href="~/css/professor.css" rel="stylesheet" />