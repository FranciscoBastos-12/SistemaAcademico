@model SistemaAcademico.APP.ViewModels.AlunoViewModel

@{
    ViewData["Title"] = "EditarAluno";
}

<div class="row">
    <div class="col-lg-6  mt-3">
        <div class="justify-content-center bg--orange text--purple text-center h3 mx-3 py-3">
            EDITAR CADASTRO DE ALUNO
        </div>
        <img src="~/assets/student.jpg" class="img-fluid" alt="student" />
    </div>
    <div class="col-md-6 mt-3">
        <form class="p-3 bg--purple text-white" asp-action="EditarAluno">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-8 form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="Cpf" class="control-label"></label>
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="EmailPrimario" class="control-label"></label>
                    <input asp-for="EmailPrimario" class="form-control" />
                    <span asp-validation-for="EmailPrimario" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="EmailSecundario" class="control-label"></label>
                    <input asp-for="EmailSecundario" class="form-control" />
                    <span asp-validation-for="EmailSecundario" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group">
                    <label asp-for="LinkedIn" class="control-label"></label>
                    <input asp-for="LinkedIn" class="form-control" />
                    <span asp-validation-for="LinkedIn" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="GitHub" class="control-label"></label>
                    <input asp-for="GitHub" class="form-control" />
                    <span asp-validation-for="GitHub" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 form-group">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" type="date" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
                <div class="col-md-3 form-group">
                    <label asp-for="WhatsApp" class="control-label"></label>
                    <input asp-for="WhatsApp" class="form-control" />
                    <span asp-validation-for="WhatsApp" class="text-danger"></span>
                </div>
                <div class="col-md-5 form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>
            </div>
            <div class="row">
                <div class="col-12 form-group">
                    <input type="submit" value="Finalizar alteração" class="btn btn--orange font-weight-bold col-12 mt-2" />
                </div>
            </div>
        </form>
    </div>
</div>

<link href="~/css/aluno.css" rel="stylesheet" />