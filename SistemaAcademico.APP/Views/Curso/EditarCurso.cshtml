@model SistemaAcademico.APP.ViewModels.CursoViewModel

@{
    ViewData["Title"] = "Editar Curso";
}

<div class="row bg--brow">
    <div class="col-lg-6  mt-3">
        <div class="justify-content-center bg--darkblue text-white text-center h3 mx-3 py-3">
            EDITAR CADASTRO DE CURSO
        </div>
        <img src="~/assets/training.jpg" class="img-fluid" alt="training" />
    </div>
    <div class="col-md-6 mt-3">
        <form class="p-3 bg--darkblue text-white" asp-action="EditarCurso">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-12 form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" readonly />
                </div>
            </div>
            <div class="row">
                <div class="col-12 form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-12 form-group">
                    <label asp-for="Duracao" class="control-label"></label>
                    <input asp-for="Duracao" class="form-control" />
                    <span asp-validation-for="Duracao" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-12 form-group">
                    <input type="submit" value="Finalizar alteração" class="btn btn--gold font-weight-bold col-12 mt-2" />
                </div>
            </div>
        </form>
    </div>
</div>

<link href="~/css/curso.css" rel="stylesheet" />